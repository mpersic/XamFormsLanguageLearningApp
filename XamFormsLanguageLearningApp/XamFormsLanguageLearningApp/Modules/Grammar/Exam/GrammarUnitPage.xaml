<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamFormsLanguageLearningApp.GrammarUnitPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XamFormsLanguageLearningApp.ViewModels"
    xmlns:model="clr-namespace:XamFormsLanguageLearningApp.Models"
    Title="{Binding Title}"
    Shell.TabBarIsVisible="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  Prompt for exam state  -->
        <Frame
            Margin="10,0"
            HorizontalOptions="Center"
            IsVisible="{Binding PromptForExamIsVisible}"
            VerticalOptions="Center">
            <StackLayout Spacing="10">
                <Label
                    Margin="5,0"
                    HorizontalTextAlignment="Center"
                    Text="Želite li pokrenuti novu lekciju ili uvježbavati gradivo?"
                    TextColor="Black" />
                <StackLayout
                    Margin="0,5,0,0"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Button
                        Command="{Binding GoToTestCommand}"
                        HorizontalOptions="Start"
                        Text="Vježba" />
                    <Button Command="{Binding GoToRevisionCommand}" Text="Lekcija" />
                </StackLayout>
            </StackLayout>
        </Frame>

        <!--  Exam visible state  -->
        <StackLayout
            Margin="20"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding ExamIsVisible}"
            Orientation="Vertical"
            VerticalOptions="FillAndExpand">
            <Label
                FontAttributes="Bold"
                HorizontalOptions="Start"
                IsVisible="{Binding QuestionPart1Visible}"
                Text="{Binding ActiveQuestionPart1}"
                TextColor="Black" />
            <Frame
                Margin="0,10"
                Padding="5,0,0,0"
                BackgroundColor="LightGray"
                CornerRadius="9"
                IsVisible="{Binding UserInput1Visible}">
                <Entry
                    Margin="5,0,0,0"
                    Placeholder="Nadopuni"
                    PlaceholderColor="Black"
                    Text="{Binding UserAnswer1}" />
            </Frame>

            <Label
                FontAttributes="Bold"
                HorizontalOptions="Start"
                IsVisible="{Binding QuestionPart2Visible}"
                Text="{Binding ActiveQuestionPart2}"
                TextColor="Black" />
            <Frame
                Margin="0,10"
                Padding="5,0,0,0"
                BackgroundColor="LightGray"
                CornerRadius="9"
                IsVisible="{Binding UserInput2Visible}">
                <Entry
                    Margin="5,0,0,0"
                    Placeholder="Nadopuni"
                    PlaceholderColor="Black"
                    Text="{Binding UserAnswer2}" />
            </Frame>

            <StackLayout Spacing="10" VerticalOptions="EndAndExpand">
                <Label
                    HorizontalOptions="Center"
                    Text="{Binding CurrentScore}"
                    TextColor="Red"
                    VerticalOptions="End" />
                <Button
                    Command="{Binding CheckAnswerCommand}"
                    HorizontalOptions="Center"
                    Text="Provjera"
                    VerticalOptions="End" />
            </StackLayout>
        </StackLayout>

        <!--  Revision visible state  -->
        <CollectionView
            x:Name="ItemsListView"
            Margin="10"
            IsVisible="{Binding RevisionIsVisible}"
            ItemsSource="{Binding GrammarExamples}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Spacing="5" Margin="0,10,0,0">
                        <Label
                            FontSize="16"
                            Style="{DynamicResource ListItemTextStyle}"
                            Text="{Binding Intro}"
                            TextColor="Black" />
                        <FlexLayout
                            AutomationId="MessagesList"
                            BindableLayout.ItemsSource="{Binding GlagolPoLicima}"
                            Direction="Column"
                            VerticalOptions="Start">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            Text="{Binding .}"
                                            TextColor="Black"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                        <FlexLayout
                            AutomationId="MessagesList1"
                            BindableLayout.ItemsSource="{Binding Deklinacija}"
                            Direction="Column"
                            VerticalOptions="Start">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid MinimumHeightRequest="60">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            Text="{Binding .}"
                                            TextColor="Black"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:GrammarViewModel}}, Path=ItemTapped}"
                                CommandParameter="{Binding .}"
                                NumberOfTapsRequired="1" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.FooterTemplate>
                <DataTemplate>
                    <StackLayout Margin="0,50,0,0" BackgroundColor="Yellow" />
                </DataTemplate>
            </CollectionView.FooterTemplate>
        </CollectionView>
        <Button
            Grid.Row="1"
            Margin="10"
            Command="{Binding FinishRevisionCommand}"
            HeightRequest="50"
            HorizontalOptions="End"
            IsVisible="{Binding RevisionIsVisible}"
            Text="Dovrši"
            VerticalOptions="End" />

        <!--  Exam finished  -->
        <Frame
            HorizontalOptions="Center"
            IsVisible="{Binding ExamIsCompleted}"
            VerticalOptions="Center">
            <StackLayout Spacing="10">
                <Label
                    HorizontalOptions="Center"
                    Text="{Binding FinishedStateMessage}"
                    TextColor="Black" />
                <Label
                    HorizontalOptions="Center"
                    IsVisible="{Binding ShowFinalScore}"
                    Text="{Binding CurrentScore}"
                    TextColor="Black" />
                <Button
                    Command="{Binding GoToHomePageCommand}"
                    HorizontalOptions="Start"
                    Text="Povratak na izbornik" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>