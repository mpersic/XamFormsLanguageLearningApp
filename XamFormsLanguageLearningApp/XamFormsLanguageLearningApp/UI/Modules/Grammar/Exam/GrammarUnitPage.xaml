                                                <Label
                                                    Grid.Column="2"
                                                    FontSize="13"
                                                    HorizontalOptions="FillAndExpand"
                                                    Text="{Binding Stupac3}"
                                                    VerticalOptions="Center" />
                                                <BoxView
                                                    Grid.Column="0"
                                                    BackgroundColor="DarkSlateGray"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    WidthRequest="1" />
                                                <BoxView
                                                    Grid.Column="1"
                                                    BackgroundColor="DarkSlateGray"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    WidthRequest="1" />
                                                <BoxView
                                                    Grid.Column="2"
                                                    BackgroundColor="DarkSlateGray"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    WidthRequest="1" />
                                            </Grid>-->
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                            <StackLayout
                                BindableLayout.ItemsSource="{Binding TableRows}"
                                IsVisible="{Binding HasFourColumns, Converter={x:StaticResource BooleanNegationConverter}}"
                                Spacing="0">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="0" BorderColor="DarkSlateBlue">
                                            <Grid Margin="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3.33*" />
                                                    <ColumnDefinition Width="3.33*" />
                                                    <ColumnDefinition Width="3.33*" />
                                                </Grid.ColumnDefinitions>
                                                <Label
                                                    Grid.Column="0"
                                                    Margin="3,0,0,0"
                                                    FontSize="13"
                                                    HorizontalOptions="FillAndExpand"
                                                    HorizontalTextAlignment="Start"
                                                    Text="{Binding Stupac1}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Column="1"
                                                    Margin="3,0,0,0"
                                                    FontSize="13"
                                                    HorizontalOptions="FillAndExpand"
                                                    HorizontalTextAlignment="Start"
                                                    Text="{Binding Stupac2}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Column="2"
                                                    Margin="3,0,0,0"
                                                    FontSize="13"
                                                    HorizontalOptions="FillAndExpand"
                                                    HorizontalTextAlignment="Start"
                                                    Text="{Binding Stupac3}"
                                                    VerticalOptions="Center" />
                                                <BoxView
                                                    Grid.Column="0"
                                                    BackgroundColor="DarkSlateGray"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    WidthRequest="1" />
                                                <BoxView
                                                    Grid.Column="1"
                                                    BackgroundColor="DarkSlateGray"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    WidthRequest="1" />
                                                <BoxView
                                                    Grid.Column="2"
                                                    BackgroundColor="DarkSlateGray"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    WidthRequest="1" />
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>

